// Tells the browser to replace the content of the element whose id='cart' with that HTML
// escape_javascript() is a helper method that converts the Ruby string into a format acceptable as input to JavaScript
$('#cart').html("<%= escape_javascript render(@cart) %>");

// Changes background color of item added to cart & then slowly fades it back
$('#current_item').css({'background-color':'#88ff88'}).
  animate({'background-color':'#114411'}, 1000);
